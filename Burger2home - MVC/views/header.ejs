  <body>

    <!-- NAVIGATION -->
    <header class="container">

      <div class="nav-desktop">
          <img src="/css/Burger logo.png" alt="logo Burger2Home">
        <div class="menu">
          <ul>
            <li><a href="/clients">Client</a></li>
            <li><a href="/ingredient">Ingrédients</a></li>
